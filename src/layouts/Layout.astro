---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/logo-ngj.webp" />
    <meta
      name="keywrods"
      content="Desarrollador web, ngj, ngjoficial, Informatico, Web Developer, 
    Nicolas Garcia, Informatico Rengo, Informatico Chile, Desarollador Software"
    />
    <meta name="viewport" content="width=device-width" />
    <meta property="og:image" content="/logo-ngj.webp" />
    <meta name="generator" content={Astro.generator} />
    <!--Google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Mulish:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <!--Google fonts 2 -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fraunces:opsz,wght@9..144,400;9..144,500;9..144,600;9..144,700;9..144,800&display=swap"
      rel="stylesheet"
    />
    <!--=============== AOS===============-->
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <script is:inline src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script is:inline>
      AOS.init({
        offset: 80,
      });
    </script>
  </body>
</html>
<style is:global>
  html {
    scroll-behavior: smooth;
  }

  nav {
    max-width: 100% !important;
    padding-top: 16px !important;
    padding-bottom: 16px !important;
  }
  header {
    max-width: 1400px !important;
    padding: 0px !important;
    padding-right: 24px !important;
    padding-left: 24px !important;
  }

  body {
    font-family: "Mulish", sans-serif;
    background: white;
  }

  .titulo {
    font-family: "Fraunces", serif;
  }

  .sombra {
    border-radius: 8px;
    background: #fcfcfc;
    box-shadow: 0px 18px 58px 16px rgba(0, 0, 0, 0.06);
  }
</style>
